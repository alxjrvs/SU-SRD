{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/chassis.schema.json",
  "title": "chassis",
  "description": "Mech chassis definitions in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "chassisAbilities",
      "patterns",
      "structurePoints",
      "energyPoints",
      "heatCapacity",
      "systemSlots",
      "moduleSlots",
      "cargoCapacity",
      "techLevel",
      "salvageValue"
    ],
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "structurePoints": {
        "$ref": "shared/common.schema.json#/definitions/nonNegativeInteger"
      },
      "energyPoints": {
        "$ref": "shared/common.schema.json#/definitions/nonNegativeInteger"
      },
      "heatCapacity": {
        "$ref": "shared/common.schema.json#/definitions/nonNegativeInteger"
      },
      "systemSlots": {
        "$ref": "shared/common.schema.json#/definitions/nonNegativeInteger"
      },
      "moduleSlots": {
        "$ref": "shared/common.schema.json#/definitions/nonNegativeInteger"
      },
      "cargoCapacity": {
        "$ref": "shared/common.schema.json#/definitions/nonNegativeInteger"
      },
      "techLevel": {
        "$ref": "shared/common.schema.json#/definitions/techLevel"
      },
      "salvageValue": {
        "$ref": "shared/common.schema.json#/definitions/salvageValue"
      },
      "chassisAbilities": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Array of chassis ability names that reference actions.json"
      },
      "patterns": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/pattern"
        }
      },
      "npc": {
        "$ref": "shared/objects.schema.json#/definitions/npc"
      }
    },
    "additionalProperties": false
  }
}
