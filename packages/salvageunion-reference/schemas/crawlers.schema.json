{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/crawlers.schema.json",
  "title": "crawlers",
  "description": "Crawler vehicles in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["npc", "actions"],
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "npc": {
        "$ref": "shared/objects.schema.json#/definitions/npc"
      },
      "actions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
