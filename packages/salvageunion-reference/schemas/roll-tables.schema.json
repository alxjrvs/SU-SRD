{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/roll-tables.schema.json",
  "title": "roll-tables",
  "description": "Random tables and roll tables in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["section", "table"],
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "section": {
        "type": "string",
        "description": "Section or category of the roll table"
      },
      "table": {
        "$ref": "shared/objects.schema.json#/definitions/table"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      }
    },
    "additionalProperties": false
  }
}
