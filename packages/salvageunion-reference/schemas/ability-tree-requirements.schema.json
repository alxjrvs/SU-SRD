{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/ability-tree-requirements.schema.json",
  "title": "ability-tree-requirements",
  "description": "Requirements for ability trees in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "description": "Requirements for an ability tree",
    "required": ["requirement"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/baseEntity"
      }
    ],
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "requirement": {
        "type": "array",
        "description": "List of ability tree names required to access this tree",
        "items": {
          "$ref": "shared/enums.schema.json#/definitions/tree"
        }
      }
    },
    "additionalProperties": false
  }
}
