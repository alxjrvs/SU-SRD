{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/meld.schema.json",
  "title": "meld",
  "description": "Meld-infected creatures in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["actions"],
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "actions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "traits": {
        "type": "array",
        "description": "Special traits and properties of items, systems, or abilities",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/trait"
        }
      },
      "salvageValue": {
        "type": "integer",
        "minimum": 0,
        "description": "Salvage value of the meld creature"
      },
      "hitPoints": {
        "type": "integer",
        "minimum": 0,
        "description": "Hit points of the meld creature"
      },
      "structurePoints": {
        "type": "integer",
        "minimum": 0,
        "description": "Structure points of the meld creature"
      }
    },
    "additionalProperties": false
  }
}
