{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/crawler-bays.schema.json",
  "title": "crawler-bays",
  "description": "Bays and facilities on Union Crawlers in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["damagedEffect", "npc"],
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "damagedEffect": {
        "type": "string",
        "description": "Effect when this bay is damaged"
      },
      "npc": {
        "$ref": "shared/objects.schema.json#/definitions/npc"
      },
      "choices": {
        "type": "array",
        "description": "Choices available to the player when interacting with the NPC",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/choice"
        }
      },
      "table": {
        "$ref": "shared/objects.schema.json#/definitions/table"
      },
      "tableName": {
        "type": "string",
        "description": "Reference to a roll table by name. The referenced table must exist in roll-tables.json"
      }
    },
    "additionalProperties": false
  }
}
