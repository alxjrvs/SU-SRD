{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/npcs.schema.json",
  "title": "npcs",
  "description": "Non-player characters and people in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["hitPoints", "actions"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/baseEntity"
      },
      {
        "$ref": "shared/objects.schema.json#/definitions/combatEntity"
      }
    ],
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "actions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "traits": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/trait"
        }
      },
      "hitPoints": {
        "$ref": "shared/common.schema.json#/definitions/hitPoints"
      },
      "bioSalvageValue": {
        "$ref": "shared/common.schema.json#/definitions/nonNegativeInteger",
        "description": "Bio-salvage value for Chimerium mutants"
      }
    },
    "additionalProperties": false
  }
}
