{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/factions.schema.json",
  "title": "factions",
  "description": "Faction groups and organizations in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/baseEntity"
      }
    ],
    "properties": {
      "goals": {
        "type": "string",
        "description": "The goals and motivations of this faction"
      },
      "assets": {
        "type": "string",
        "description": "The assets and resources controlled by this faction"
      },
      "weaknesses": {
        "type": "string",
        "description": "The weaknesses and vulnerabilities of this faction"
      },
      "formation": {
        "type": "array",
        "description": "The mechs that make up this faction formation",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/formationMech"
        }
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      }
    },
    "required": ["goals", "assets", "weaknesses"],
    "unevaluatedProperties": false
  }
}
