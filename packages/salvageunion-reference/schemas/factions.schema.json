{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/factions.schema.json",
  "title": "factions",
  "description": "Faction groups and organizations in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "goals": {
        "type": "string",
        "description": "The goals and motivations of this faction"
      },
      "assets": {
        "type": "string",
        "description": "The assets and resources controlled by this faction"
      },
      "weaknesses": {
        "type": "string",
        "description": "The weaknesses and vulnerabilities of this faction"
      },
      "formation": {
        "type": "array",
        "description": "The mechs that make up this faction formation",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/formationMech"
        }
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      }
    },
    "required": ["goals", "assets", "weaknesses"],
    "additionalProperties": false
  }
}
