{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/abilities.schema.json",
  "title": "abilities",
  "description": "Pilot abilities and skills in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["tree", "level"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/baseEntity"
      }
    ],
    "properties": {
      "asset_url": {
        "$ref": "shared/common.schema.json#/definitions/asset_url"
      },
      "content": {
        "$ref": "shared/objects.schema.json#/definitions/content"
      },
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "indexable": {
        "type": "boolean",
        "default": true
      },
      "blackMarket": {
        "type": "boolean",
        "default": false
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "page": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "description": {
        "type": "string"
      },
      "tree": {
        "$ref": "shared/enums.schema.json#/definitions/tree"
      },
      "level": {
        "oneOf": [
          {
            "type": "integer",
            "minimum": 1,
            "maximum": 3
          },
          {
            "type": "string",
            "const": "L"
          },
          {
            "type": "string",
            "const": "G"
          }
        ]
      },
      "mechActionType": {
        "$ref": "shared/enums.schema.json#/definitions/actionType"
      },
      "grants": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/grant"
        }
      },
      "activationCurrency": {
        "type": "string",
        "enum": ["Variable", "EP or AP", "SP or HP"]
      },
      "actions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
